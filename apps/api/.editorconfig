# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON files
[*.{js,ts,json}]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Prisma schema
[*.prisma]
indent_style = space
indent_size = 2

# Environment files
[*.env*]
insert_final_newline = false

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2

# Config files
[{package.json,.travis.yml,.eslintrc,.prettierrc}]
indent_style = space
indent_size = 2

# Git config files
[.git*]
indent_style = tab

# Test files
[*.test.js]
indent_style = space
indent_size = 2

# Documentation files
[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Ignore minified files
[**.min.*]
indent_style = ignore
insert_final_newline = ignore

# Ignore third party files
[**/node_modules/**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore
max_line_length = ignore
