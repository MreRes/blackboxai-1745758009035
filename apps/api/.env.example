# Application
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/financial_bot

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WhatsApp
WHATSAPP_SESSION_DIR=./whatsapp-sessions

# Logging
LOG_LEVEL=debug

# Default Admin
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-in-production
DEFAULT_ADMIN_EMAIL=admin@example.com

# Activation Code Settings
ACTIVATION_CODE_LENGTH=8
DEFAULT_ACTIVATION_DURATION=7d # 7 days

# Rate Limiting
RATE_LIMIT_WINDOW=15 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Security
BCRYPT_ROUNDS=12
